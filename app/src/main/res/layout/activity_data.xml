<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".DataActivity">

        <com.example.test.custom.MyActionBar
            android:id="@+id/my_action_bar_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/nickname_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gender_my_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/gender_head_my_data"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/gender_content_my_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:spinnerMode="dropdown"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="45dp"
                android:background="#D3D3D3" />

        </com.google.android.material.card.MaterialCardView>

        <com.example.test.custom.MyDataBar
            android:id="@+id/birthday_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/tel_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/email_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/confirm_data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/frame_resource"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="#D1AE54"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
