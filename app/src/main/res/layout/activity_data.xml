<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".DataActivity">

        <com.example.test.custom.MyActionBar
            android:id="@+id/my_action_bar_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/nickname_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/gender_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/birthday_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/tel_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <com.example.test.custom.MyDataBar
            android:id="@+id/email_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/confirm_data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/frame_resource"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="#D1AE54"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
